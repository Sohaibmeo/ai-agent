generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FitnessGoal {
  LOSE_FAT
  MAINTAIN
  GAIN_MUSCLE
}

model UserProfile {
  id                  String       @id @default(uuid())
  name                String
  email               String       @unique
  heightCm            Int
  weightKg            Int
  age                 Int
  activityLevel       String
  weeklyBudgetCents   Int
  dietaryPreferences  String[]     @default([])
  excludedIngredients String[]     @default([])
  fitnessGoal         FitnessGoal
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  plans               MealPlan[]
}

model Recipe {
  id          String   @id @default(uuid())
  name        String   @unique
  mealType    String
  calories    Int
  proteinGrams Int
  carbsGrams  Int
  fatGrams    Int
  costCents   Int
  dietTags    String[] @default([])
  ingredients String[]
  instructions String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MealPlan {
  id            String      @id @default(uuid())
  userId        String
  user          UserProfile @relation(fields: [userId], references: [id])
  summary       String
  totalCalories Int
  totalProtein  Int
  totalCostCents Int
  planJson      Json
  agentVersion  String
  createdAt     DateTime    @default(now())
}
